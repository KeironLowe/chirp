{
    "name": "keironlowe/chirp",
    "description": "A simple and lightweight WordPress library for working with the Twitter API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Keiron Lowe",
            "email": "keiron@keironlowe.co.uk"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "kitetail/zttp": "^0.6.0",
        "nesbot/carbon": "^2.30",
        "tightenco/collect": "^5.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.11",
        "phpunit/phpunit": "^8",
        "vlucas/phpdotenv": "^4.1",
        "sempro/phpunit-pretty-print": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "KeironLowe\\Chirp\\": ["src/", "tests/"]
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit tests"
    }
}
